
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-margin--large">
    <div class="container">
        <div class="row">      
            <div class="col-md-8 col-lg-9">
                <form action="/Login/Auth" class="form-contact contact_form" method="post" id="contactForm" novalidate="novalidate">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <input class="form-control" name="username" id="name" type="text" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="password" id="email" type="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group text-center text-md-right mt-3">
                            <button type="submit" class="button button-contactForm">Login</button><br />
                            @Html.ActionLink("Recuperar ID", "Step1_email", "Login")<br />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->
